#!/bin/sh


jail::list(){
  local _json _format _style="text"
  local _hostname _ipaddr _state _jid _gateway

  while getopts j _opt; do
    case ${_opt} in
      j) _json="json" ;;
    esac
  done
  shift $((OPTIND - 1))

  _jformact='{:name}^{:state}^{:jid}^{:hostname}^{:ipv4}^{:gateway}\n'
  _jformstp='{:name}^{:state}\n'
  {
    [ ! -z ${_json} ]  && printf '[' || xo "${_jformact}" "NAME" "STATE" "JID" "HOSTNAME" "IPv4" "GW"
      for _j in $(sysrc -n jail_list);
      do
        if jls -j ${_j} jid > /dev/null 2>&1 ; then
          _hostname=$(jexec ${_j} hostname)
          _ipaddr=$(jexec ${_j} ifconfig -f inet:cidr $(jexec ${_j} ifconfig -g epair | head -1) | awk '/inet / {print $2}')
          _gateway=$(jexec ${_j} route -n get default | awk '/gateway/ {print $2}')
          _state="Active"
          _jid=$(jls -j ${_j} jid)
          _format="${_jformact}"
        else
          _state="Stopped"
          _format="${_jformstp}"
        fi
        [ ! -z ${_json} ] && _style="json" && printf "{"
        xo --style "${_style}" "${_format}" "${_j}" "${_state}" "${_jid}" "${_hostname}" "${_ipaddr}" "${_gateway}"
        [ ! -z ${_json} ] && printf "}"
      done
    [ ! -z ${_json} ] && printf ']\n'
  } | ( [ ! -z ${_json} ] && sed -e "s/}{/},{/g" || column -ts^ )
}

jail::info(){
  local _json _format _style="text"
  local _hostname _ipaddr _state _jid _gateway _netmask

  while getopts j _opt; do
    case ${_opt} in
      j) _json="json" ;;
    esac
  done
  shift $((OPTIND - 1))

  _jname="${1}"

  _jformact='Name: {:name}\nState: {:state}\nJID: {:jid}\nHostname: {:hostname}\nIPv4: {:ipv4}\nNetmask: {:netmask}\nGateway: {:gateway}\n'
  _jformstp='Name: {:name}\nState: {:state}\n'

  if sysrc -n jail_list | tr ' ' '\n' | grep "^${_jname}$" > /dev/null 2>&1 ; then
    if jls -j ${_jname} > /dev/null 2>&1 ; then
      _hostname=$(jexec ${_jname} hostname)
      _jid=$(jls -j ${_jname} jid)
      _ipaddr=$(jexec ${_jname} ifconfig -f inet:dotted $(jexec ${_jname} ifconfig -g epair | head -1) | awk '/inet / {print $2}')
      _gateway=$(jexec ${_jname} route -n get default | awk '/gateway/ {print $2}')
      _netmask=$(jexec ${_jname} ifconfig -f inet:dotted $(jexec ${_jname} ifconfig -g epair | head -1) | awk '/netmask/ {print $4}')
      _state="Active"
      _format="${_jformact}"
    else
      _state="Stopped"
      _format="${_jformstp}"
    fi
  else
    _state="Not found"
    _format="${_jformstp}"
  fi

  [ ! -z ${_json} ] && _style="json" && printf "{"
  xo --style "${_style}" "${_format}" "${_jname}" "${_state}" "${_jid}" "${_hostname}" "${_ipaddr}" "${_netmask}" "${_gateway}"
  [ ! -z ${_json} ] && _style="json" && printf "}"
}


jail::get_next_id(){
  expr $(
    ( grep -s '$id' /etc/jail.conf.d/* || echo '$id = "0";' ) |
    awk -F '[="]' '{print $3}' |
    sort -h |
    tail -1
  ) + 1
}

jail::start(){
  local _name="$1"
  jail -f /etc/jail.conf.d/${_name}.conf -c ${_name}
}

jail::stop(){
  local _name="$1"
  jail -f /etc/jail.conf.d/${_name}.conf -r ${_name} > /dev/null 2>&1 && echo "Jail ${_name} stopped"
}

jail::destroy(){
  local _name="$1"

  #net::rdr_del del -j ${_name} -f &&
  #net::nat_del del ${_name} &&
  jail::stop ${_name}

  jail::_destroyzfs ${_name}

  rm /etc/jail.conf.d/${_name}.conf &&
  sysrc jail_list-="${_name}"
}

jail::_destroyzfs(){
  local _name="$1"
  sleep 2
  zfs destroy -r ${JAILER_ZFS_DATASET}/${_name} || util:err "ZFS Destroy error, please check dataset dependency"
}

jail::extract(){
  local version=$1
  mkdir -p ${jailer_dir}/bootstrap/dist-files
  [ -z ${FreeBSD_mirror} ] && FreeBSD_mirror="https://download.freebsd.org/ftp"
  ( [ -e ${jailer_dir}/bootstrap/dist-files/base-${_version}.txz ] && jail::_checksum ${_version} ) ||
  ( fetch -o ${jailer_dir}/bootstrap/dist-files/base-${_version}.txz ${FreeBSD_mirror}/releases/${UNAME_m}/${_version}/base.txz && jail::_checksum ${_version} )
  tar -xf ${jailer_dir}/bootstrap/dist-files/base-${_version}.txz -C ${jailer_dir}/bootstrap/${_version}/
}

jail::_checksum(){
  local _version=$1
  sha256 -qc $(fetch -qo - ${FreeBSD_mirror}/releases/${UNAME_m}/${_version}/MANIFEST | grep base.txz | cut -f 2) ${jailer_dir}/bootstrap/dist-files/base-${_version}.txz > /dev/null
}


jail::bootstrap(){
  [ "$#" -eq "0" ] && zfs list -t snap -Ho name -r ${JAILER_ZFS_DATASET}/bootstrap | sed -e "s|${JAILER_ZFS_DATASET}/bootstrap/||" -e 's/@base$//' && exit 0

  local _version="${1}"

  zfs create -p ${JAILER_ZFS_DATASET}/bootstrap/${_version}
  jail::extract ${_version}
  zfs snap ${JAILER_ZFS_DATASET}/bootstrap/${_version}@base
}

jail::create(){
  local _name _id _path
  local _version=${UNAME_r} _snap
  local _addr _bridge="bridge0" _domain=${HOSTNAME}
  local _silent
  local _gw _netmask
  local _script _content

  while getopts :a:b:c:d:f:g:m:ns:r: _opt; do
    case ${_opt} in
      a) _addr="${OPTARG}" ;;
      b) _bridge="${OPTARG}" ;;
      c) _content="${OPTARG}" ;;
      d) _domain="${OPTARG}" ;;
      f) _script="${OPTARG}" ;;
      g) _gw="${OPTARG}" ;;
      m) _netmask="${OPTARG}" ;;
      n) _silent="yes" ;;
      r) _version="${OPTARG}" ;;
      s) _snap="${OPTARG}" ;;
      *) util::usage ;;
    esac
  done
  shift $((OPTIND - 1))

  _name="${1:-$(uuidgen)}"
  _id=$(jail::get_next_id)
  _path=${jailer_dir}/${_name}
  [ -z "${_gw}" ]       && _gw=$(ifconfig -f inet:dotted ${_bridge} | awk '/inet/ {print $2}')
  [ -z "${_netmask}" ]  && _netmask=$(ifconfig -f inet:dotted ${_bridge} | awk '/inet/ {print $4}')

  [ ${_addr} = "DHCP" ] &&
  _macaddr=$(openssl rand -hex 6 | sed -r 's/^(.{8}).*$/\1/; s/([0-9a-f]{2})/\1:/g; s/:$//; s/^/de:ad:/;')
  _netexec=$(cat <<EOF
    exec.start     += "/sbin/ifconfig epair\${id}b ether ${_macaddr} up";
    exec.start     += "/sbin/dhclient epair\${id}b";
EOF
) &&
  _netvars=$(cat <<EOF
    devfs_ruleset = 10;
EOF
)

  [  ${_addr} != "DHCP" ] &&
  _netvars=$(cat <<EOF
    \$ipaddr = "${_addr}";
    \$mask   = "${_netmask}";
    \$gw     = "${_gw}";
EOF
) &&
  _netexec=$(cat <<EOF
    exec.start     += "/sbin/ifconfig epair\${id}b \${ipaddr} netmask \${mask} up";
    exec.start     += "/sbin/route add default \${gw}";
EOF
)

  cat << EOF > /etc/jail.conf.d/${_name}.conf
# vim: set syntax=sh:
exec.clean;
allow.raw_sockets;
mount.devfs;

${_name} {
    \$id     = "${_id}";
${_netvars}
    \$bridge = "${_bridge}";
    \$domain = "${_domain}";
    vnet;
    vnet.interface = "epair\${id}b";

    exec.prestart   = "ifconfig epair\${id} create up";
    exec.prestart  += "ifconfig epair\${id}a up descr vnet-\${name}";
    exec.prestart  += "ifconfig \${bridge} addm epair\${id}a up";

    exec.start      = "/sbin/ifconfig lo0 127.0.0.1 up";
${_netexec}
    exec.start     += "/bin/sh /etc/rc";

    exec.prestop    = "ifconfig epair\${id}b -vnet \${name}";

    exec.poststop   = "ifconfig \${bridge} deletem epair\${id}a";
    exec.poststop  += "ifconfig epair\${id}a destroy";

    host.hostname = "\${name}.\${domain}";
    path = "${_path}";
    exec.consolelog = "/var/log/jail/\${name}.log";
    persist;
}
EOF

  [ ! -z ${_snap} ]    && zfs clone ${JAILER_ZFS_DATASET}/${_snap} ${JAILER_ZFS_DATASET}/${_name} || ( zfs send ${JAILER_ZFS_DATASET}/bootstrap/${_version}@base | zfs recv ${JAILER_ZFS_DATASET}/${_name} )
  [ ! -z ${_silent} ]  && sysrc -q -f "${_path}"/etc/rc.conf cron_enable="NO" sendmail_enable="NONE" syslogd_flags="-ss"
  [ ! -z ${_content} ] && cp -a ${_content} ${_path}/tmp/

  sysrc -q jail_list+="${_name}"
  jail::start ${_name}
  [ ! -z ${_script} ]  && jail::exec -f ${_script} ${_name} || true
}

jail::console() {
  local _name="$1"
  jexec -l ${_name} /bin/tcsh
}

jail::exec() {
  local _name _script

  while getopts :f: _opt; do
    case ${_opt} in
      f) _script="${OPTARG}" ;;
      *) util::usage ;;
    esac
  done
  shift $((OPTIND - 1))
  _name="$1"
  jexec -l ${_name} /bin/sh -s < ${_script}
}

jail::edit() {
  [ -z "${EDITOR}" ] && EDITOR=vi

  [ $# -lt 1 ] && help::edit

  local _name="$1"
  ${EDITOR} "/etc/jail.conf.d/${_name}.conf"
}

jail::checkexists(){
  _name="${1}"
  jls -j ${_name} > /dev/null 2>&1 || util::err "Jail ${_name} does not exist. Use 'jailer list'"
}
